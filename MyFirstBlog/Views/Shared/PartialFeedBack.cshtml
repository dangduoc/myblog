<div id="feedback-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" style="color:black;top:5px;right:5px;">&times;</button>
                <h4 class="modal-title">Write me feedback</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" role="form">
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="name-feedback">Name:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="name-feedback" placeholder="Enter your name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="content-feedback">Feedback:</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" rows="5" id="content-feedback"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-default">Send Feedback</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
